
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" />
    <script src="~/Scripts/jquery-1.12.0.min.js"></script>
    <link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/bootstrap/css/bootstrap-responsive.min.css" rel="stylesheet" />
    <script src="~/bootstrap/js/bootstrap.min.js"></script>

    <script src="~/login/js/scripts.js"></script>
    <script src="~/login/js/jquery.backstretch.min.js"></script>
    <link href="~/login/css/style.css" rel="stylesheet" />

    <script src="~/Content/JS/outjs/bootbox.js"></script>
    <link href="~/Content/CSS/bootboxalert.css" rel="stylesheet" />
    <link href="~/datetimepicker/css/bootstrap-datetimepicker.min.css" rel="stylesheet" />
    <script src="~/datetimepicker/js/bootstrap-datetimepicker.js"></script>
    <script src="~/datetimepicker/js/locales/bootstrap-datetimepicker.zh-CN.js"></script>
    <script src="/Content/JS/outjs/formValidate.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Content/JS/admin.js"></script>
    <script src="~/Content/JS/fn.js"></script>    
    <link href="~/Content/CSS/login.css" rel="stylesheet" />
    <title>登录</title>
</head>
<body>
    <div class="inner-bg">
        <div class="container">
            <div class="row">
                <div class="row title">
                    <h1>欢迎来到EricLee体验页面！</h1>
                </div>
            </div>
            <div class="row" style="margin-top:40px;">
                <div class="span3"></div>
                <div class="span6" style="">
                    <div class="form-top">
                        <div class="form-top-left">
                            <h3>请登录</h3>
                            <p>输入账号密码进行登录验证</p>
                        </div>
                        <div class="form-top-right">
                            <i class="fa fa-key"><img src="~/login/img/keys.jpg" /></i>
                        </div>
                    </div>
                    <div class="form-bottom">
                        @using (Ajax.BeginForm("Login", null, new AjaxOptions() { HttpMethod = "Post", OnBegin = "LS.admin.myfn.LoginBegin('#form0')", OnSuccess = "LS.admin.myfn.LoginSuccess", OnFailure = "LS.admin.myfn.AjaxFailure" }, new { @class = "form-horizontal admin-form" }))
                        {
                            <input type="hidden" value="@Request["returnurl"]" name="returnurl"/>
                            <div class="control-group">
                                <div class="controls">
                                    <input type="text" id="LoginName" name="LoginName" placeholder="用户名" validate min=2 max=10>
                                    <span class="ls-msg help-inline"></span>
                                </div>
                            </div>
                            <div class="control-group">

                                <div class="controls">
                                    <input type="password" id="Password" name="Password" placeholder="密码" validate min="6" max="16">
                                    <span class="ls-msg help-inline"></span>
                                </div>
                            </div>
                            @*<div class="control-group" style="margin-bottom:4px;">
                                    <div class="controls">
                                        <label class="checkbox">
                                            <input type="checkbox">记住我
                                        </label>
                                    </div>
                                </div>*@
                            <div class="control-group">
                                <div class="controls">
                                    <button type="submit" class="btn btn-primary" data-loading-text="正在登录......" data-complete-text="登录成功">登录</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <div class="span3"></div>
            </div>
        </div>
    </div>
</body>
</html>
